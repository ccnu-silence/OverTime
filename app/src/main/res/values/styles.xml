<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="GuideCardStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/left_offset</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
        <item name="cardCornerRadius">@dimen/default_radius</item>
        <item name="cardBackgroundColor">@color/Aquamarine3</item>
    </style>

    <style name="GuideTextStyle" >
        <item name="android:focusable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ItemTaskCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">@dimen/left_offset</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
        <item name="cardCornerRadius">@dimen/default_radius</item>
        <item name="cardBackgroundColor">@color/White</item>
    </style>

</resources>
